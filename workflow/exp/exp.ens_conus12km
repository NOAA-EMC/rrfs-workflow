export LBC_LENGTH=12
export LBC_INTERVAL=3
export LBC_EXTRN_MDL_BASEDIR="local.setup"
export LBC_EXTRN_MDL_NAME_PATTERN="local.setup"
export LBC_EXTRN_MDL_NAME_PATTERN_B="local.setup"
export LBC_UNGRIB_GROUP_TOTAL_NUM=1
